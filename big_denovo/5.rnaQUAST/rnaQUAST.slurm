#!/bin/bash
#SBATCH -N 1
#SBATCH -n 48
#SBATCH -t 72:00:00
#SBATCH -p checkpt
#SBATCH -A loni_pgtrain3
#SBATCH -o slurm-%j.out-%N
#SBATCH -e slurm-%j.err-%N
date
echo "job started"
echo " "
echo "loading modules"
module load python/3.7.6
module load blast/2.10.1/gcc-9.3.0
module list
echo " "
echo "setting BLASTDB variable to /work/mjfos2r/nr"
echo "export BLASTDB=/work/mjfos2r/nr"
export BLASTDB=/work/mjfos2r/databases/nr
echo "BLASTDB = $BLASTDB"
echo " "
echo "currently in: $PWD"
echo " "
echo "moving to /work/mjfos2r/denovo/trinity/rRNA-culled-assembly/rnaQUAST"
cd /work/mjfos2r/denovo/trinity/rRNA-culled-assembly/rnaQUAST
echo "currently in: $PWD"
echo " "
echo "running rnaQUAST.py against the centroids generated by vsearch.sh"
python3 /work/mjfos2r/software/rnaQUAST/rnaQUAST.py --transcripts /ddnA/work/mjfos2r/denovo/trinity/trinity_rRNA_culled/clustering/centroids.fasta \
--gene_mark \
--threads 48 \
--output_dir /work/mjfos2r/denovo/trinity/trinity_rRNA_culled/rnaQUAST/results
echo " "
echo "Job Done!"
date
exit 0
